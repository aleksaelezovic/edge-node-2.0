{
  "name": "@dkg/plugins",
  "version": "0.0.2",
  "description": "Package that provides utilities for creating DKG Node plugins",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./helpers": {
      "types": "./dist/helpers.d.ts",
      "import": "./dist/helpers.mjs",
      "require": "./dist/helpers.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.mjs",
      "require": "./dist/types.js"
    }
  },
  "scripts": {
    "dev": "tsup src/*.ts --format cjs,esm --dts --watch",
    "build": "tsup src/*.ts --format cjs,esm --dts",
    "check-types": "tsc --noEmit",
    "test": "echo 'No tests yet in /plugins - placeholder' && exit 0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dkg.js": "^8.0.14",
    "express": "^5.1.0",
    "morgan": "^1.10.0",
    "uuid": "^10.0.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@dkg/typescript-config": "*",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "tsup": "^8.5.0"
  }
}
