{
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "build:migrations", "build:web", "build:server"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "build:web": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/app/**"]
    },
    "build:server": {
      "inputs": ["$TURBO_DEFAULT$", ".env*", "src/server"],
      "outputs": ["dist/*"]
    },
    "build:migrations": {
      "inputs": ["$TURBO_DEFAULT$", "src/server/database"],
      "outputs": ["drizzle/*"]
    },
    "dev": {
      "with": ["dev:app", "dev:server", "drizzle:studio"],
      "persistent": true,
      "cache": false
    },
    "dev:app": {
      "persistent": true
    },
    "dev:server": {
      "persistent": true
    },
    "drizzle:studio": {
      "persistent": true
    }
  }
}
