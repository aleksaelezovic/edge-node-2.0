{
  "name": "dkg-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:check": "turbo run format lint check-types build",
    "check": "turbo run format check-types lint",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,mjs,json,md,yml}\"",
    "check-types": "turbo run check-types",
    "test:mocha": "mocha",
    "test": "npm run test:api && npm run test:integration && npm run test:e2e",
    "test:e2e": "turbo run test:e2e --filter=@dkg/agent --force",
    "test:api": "turbo run test --filter='@dkg/plugin-*' --force",
    "test:integration": "cd apps/agent/tests/integration && npm test",
    "test:ui:report": "node report-UI-Tests-config.js",
    "test:api:report": "node report-API-Tests-config.js"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@playwright/test": "^1.54.2",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.9.0",
    "@types/sinon": "^17.0.4",
    "@types/supertest": "^6.0.3",
    "chai": "^5.2.1",
    "dotenv": "^17.2.1",
    "eslint": "^9.29.0",
    "mocha": "^11.7.1",
    "mochawesome": "^7.1.3",
    "prettier": "^3.5.3",
    "sinon": "^21.0.0",
    "supertest": "^7.1.4",
    "test-results-reporter": "^1.1.6",
    "tsx": "^4.20.5",
    "turbo": "^2.5.5",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
